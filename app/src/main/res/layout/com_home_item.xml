<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/透明">

    <ImageView
        android:id="@+id/com_home_gridview_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:background="@drawable/icon_note"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/com_home_gridview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="音乐"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/白色"
        android:layout_below="@id/com_home_gridview_image"
        />

</RelativeLayout>
