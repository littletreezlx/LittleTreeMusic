<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/白色"
    >

    <TextView
        android:id="@+id/nav_networkio_tvtitle"
        style="@style/NavigationTitleTextView_Style"
        android:layout_height="0dp"
        app:layout_heightPercent="15%w"
        android:text="网络传输"
        />

    <ImageButton
        android:id="@+id/nav_networkio_btnback"
        style="@style/SquareImageButton_Style"
        app:layout_widthPercent="15%w"
        app:layout_heightPercent="15%w"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_alignParentStart="true"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_networkio_tvtitle"
        >

        <ProgressBar
            android:id="@+id/nav_networkio_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="0"
            android:max="100"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/nav_about_tvcontent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:text="下载进度"
            android:textColor="@color/黑色"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/nav_about_tvtitle"
            />


    </FrameLayout>






</com.zhy.android.percent.support.PercentRelativeLayout>