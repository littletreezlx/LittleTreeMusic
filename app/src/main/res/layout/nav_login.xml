<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/白色"
    >

    <TextView
        android:id="@+id/nav_login_tvtitle"
        style="@style/NavigationTitleTextView_Style"
        android:layout_height="0dp"
        app:layout_heightPercent="15%w"
        android:singleLine="false"
        android:text="欢迎登陆"

        />

    <ImageButton
        android:id="@+id/nav_login_btnback"
        style="@style/SquareImageButton_Style"
        app:layout_widthPercent="15%w"
        app:layout_heightPercent="15%w"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/nav_login_edtaccount"
        style="@style/LoginEditText_Style"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="50%w"
        android:ems="10"
        android:hint="手机号(11位)"
        android:inputType="phone"
        android:layout_centerHorizontal="true"

        app:layout_marginTopPercent="35%"
        />

    <EditText
        android:id="@+id/nav_login_edtpassword"
        style="@style/LoginEditText_Style"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="50%w"
        android:ems="10"
        android:hint="密码(6-20位)"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nav_login_edtaccount"
       />

    <CheckBox
        android:id="@+id/nav_login_cbremember"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="50%w"
        android:text="记住密码"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nav_login_edtpassword"
        />


    <Button
        android:id="@+id/nav_login_btnlogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="50%w"
        android:text="登陆"
        android:textSize="20sp"
        android:background="@drawable/shape_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nav_login_cbremember"
        />


    <Button
        android:id="@+id/nav_login_btnregister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="6%h"
        app:layout_widthPercent="20%w"
        app:layout_marginBottomPercent="1%w"
        android:text="注册"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/nav_login_btnalterpd"
         />


    <Button
        android:id="@+id/nav_login_btnalterpd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="6%h"
        app:layout_widthPercent="20%w"
        android:text="修改密码"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        />

</com.zhy.android.percent.support.PercentRelativeLayout>