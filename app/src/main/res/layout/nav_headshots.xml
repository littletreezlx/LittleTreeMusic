<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/白色"
    >

    <TextView
        android:id="@+id/nav_headshots_tvtitle"
        style="@style/NavigationTitleTextView_Style"
        android:layout_height="0dp"
        app:layout_heightPercent="15%w"
        android:text="DIY头像"

        />

    <ImageButton
        android:id="@+id/nav_headshots_btnback"
        style="@style/SquareImageButton_Style"
        app:layout_widthPercent="15%w"
        app:layout_heightPercent="15%w"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/nav_headshots_imgview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%w"
        app:layout_heightPercent="50%w"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_person_black_24dp" />


    <Button
        android:id="@+id/nav_headshots_btnchange"
        style="@style/NavigationTitleTextView_Style"
        android:layout_height="0dp"
        app:layout_heightPercent="15%w"
        android:layout_alignParentTop="false"
        android:text="修改头像"
        android:layout_alignParentBottom="true"
    />





</com.zhy.android.percent.support.PercentRelativeLayout>