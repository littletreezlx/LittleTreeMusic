<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/com_randomsong_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/透明"
   >


    <LinearLayout
        android:id="@+id/com_randomsong_item_tv_layout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_widthPercent="70%w"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/com_randomsong_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="title"
            android:textColor="@color/recyclerview_color"
            android:textSize="22sp"
            android:duplicateParentState="true"
            />

        <TextView
            android:id="@+id/com_randomsong_item_tv_artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="artist"
            android:textSize="14sp"
            android:textColor="@color/recyclerview_color"
            android:duplicateParentState="true"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/com_randomsong_item_tv_firstpush"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_widthPercent="10%w"
        android:text="first pushed '\n' by"
        android:textSize="10sp"
        android:textColor="@color/白色"
        android:layout_toEndOf="@id/com_randomsong_item_tv_layout"
        android:layout_toStartOf="@+id/com_randomsong_item_headshots"
        />

    <ImageButton
        android:id="@+id/com_randomsong_item_headshots"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="20%w"
        app:layout_heightPercent="20%w"
        android:background="@drawable/ic_person_black_24dp"
        android:layout_alignParentEnd="true"
        />



</com.zhy.android.percent.support.PercentRelativeLayout>
