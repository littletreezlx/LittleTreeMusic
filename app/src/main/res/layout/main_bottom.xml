<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/透明"
    android:layout_alignParentBottom="true"
    >

    <ImageButton
        android:id="@+id/main_bottom_btnAlbum"
        style="@style/SquareImageButton_Style"
        app:layout_heightPercent="18%w"
        app:layout_widthPercent="18%w"
        android:src="@drawable/ic_music_note_white_24dp"
       />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="18%w"
        app:layout_widthPercent="28%w"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/main_bottom_tvtitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="title"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:maxLines="2"
            />

        <TextView
            android:id="@+id/main_bottom_tvartist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="artist"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="#ffffff"
            />

    </LinearLayout>







    <ImageButton
        android:id="@+id/main_bottom_imgpause"
        style="@style/SquareImageButton_Style"
        app:layout_heightPercent="18%w"
        app:layout_widthPercent="18%w"
        android:visibility="gone"
        android:src="@drawable/ic_pause_white_24dp"
        />

    <ImageButton
        android:id="@+id/main_bottom_imgstart"
        style="@style/SquareImageButton_Style"
        app:layout_heightPercent="18%w"
        app:layout_widthPercent="18%w"
        android:src="@drawable/ic_play_arrow_white_24dp"
        />

    <ImageButton
        android:id="@+id/main_bottom_imgnext"
        style="@style/SquareImageButton_Style"
        app:layout_heightPercent="18%w"
        app:layout_widthPercent="18%w"
        android:src="@drawable/ic_skip_next_white_24dp"
       />

    <ImageButton
        android:id="@+id/main_bottom_imgmenu"
        style="@style/SquareImageButton_Style"
        app:layout_heightPercent="18%w"
        app:layout_widthPercent="18%w"
        android:src="@drawable/ic_menu_white_24dp"
        />


</com.zhy.android.percent.support.PercentLinearLayout>
