<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_activity_layout"
        >

        <RelativeLayout
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="15%h"
            android:background="@color/透明"
            android:fitsSystemWindows="true"
            >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/main_title"
            android:layout_above="@+id/bottom_temp"
            app:layout_heightPercent="70%h"
            app:layout_marginTopPercent="1%h"
            app:layout_marginBottomPercent="1%h"
            android:focusable="true"
            android:clickable="true"
            >

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="10%h"
            >

        </RelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/main_naviationview"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/白色"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        app:theme="@style/NavigationView_Style"
        >

    </android.support.design.widget.NavigationView>




    </android.support.v4.widget.DrawerLayout>