<?xml version="1.0" encoding="utf-8"?>


<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/透明"
    >

    <Button
        android:id="@+id/com_randompicture_button_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%w"
        app:layout_heightPercent="10%h"
        android:text="刷新推荐"
        android:textSize="30sp"
        android:textColor="@color/白色"
        android:background="@drawable/shape_btn_pressed"

        android:gravity="top|start"
        />

    <Button
        android:id="@+id/com_randompicture_button_changestyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%w"
        app:layout_heightPercent="10%h"
        android:text="换种风格"
        android:textSize="30sp"
        android:textColor="@color/白色"
        android:background="@drawable/selector_btntext_pressed"

        android:gravity="top|end"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/com_randompicture_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/com_randompicture_button_refresh"
        >

    </android.support.v7.widget.RecyclerView>

</com.zhy.android.percent.support.PercentRelativeLayout>

