<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/透明">

    <RelativeLayout
        android:id="@+id/com_songinfo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="70%h"
        app:layout_marginTopPercent="1%h"
        app:layout_marginBottomPercent="1%h"


        >
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/com_songinfo_middlemenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="20%h"

        android:layout_below="@id/com_songinfo_viewpager"
        >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/com_songinfo_seekbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:layout_below="@id/com_songinfo_middlemenu"
        >
    </RelativeLayout>




</com.zhy.android.percent.support.PercentRelativeLayout>

